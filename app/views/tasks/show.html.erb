<h1><%= @task.title %></h1>
<p><%= @task.completed ? '✔️' : '⬜️'%></p>
<p><%= @task.details %></p>
<div><%= link_to 'Delete Task', task_path(@task), class: 'btn btn-danger', method: :delete, data: { confirm: "Are you sure you want to delete #{@task.title}?" } %>
  <%= link_to 'Edit Task', edit_task_path, class: 'btn btn-secondary' %></div>
<div><%= link_to 'Back', tasks_path, class: 'btn btn-primary'%></div>
